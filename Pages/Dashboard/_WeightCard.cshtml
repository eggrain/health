@model ViewModels.WeightCardViewModel

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Weight</span>
        <a asp-page="/Weights/Index" class="btn btn-sm btn-outline-secondary">
            View history
        </a>
    </div>

    <div class="card-body">

        @if (Model.LatestWeight is not null)
        {
            <p class="mb-1">
                <strong>@Model.LatestWeight.Value</strong> @Model.Unit
                <small class="text-muted">
                    (@Model.LatestWeight.MeasuredAt.ToLocalTime().ToShortDateString())
                </small>
            </p>

            @if (Model.WeightDelta is not null)
            {
                <p class="text-muted mb-3">
                    Change since last:
                    <span class="@(Model.WeightDelta > 0 ? "text-danger" : "text-success")">
                        @(Model.WeightDelta > 0 ? "↗" : "↘")
                        @Math.Abs(Model.WeightDelta.Value).ToString("0.0") @Model.Unit
                    </span>
                </p>
            }
        }
        else
        {
            <p class="text-muted">No weight measurements yet. Add your first one:</p>
        }

        <form method="post"
              asp-page-handler="AddWeight"
              class="weight-form">

            <div class="weight-form__field">
                <label asp-for="NewEntry.Weight" class="form-label small mb-1">Weight</label>
                <input asp-for="NewEntry.Weight"
                       class="form-control"
                       placeholder="Weight" />
            </div>

            <div class="weight-form__field">
                <label asp-for="NewEntry.MeasuredAt" class="form-label small mb-1">Date &amp; time</label>
                <input asp-for="NewEntry.MeasuredAt"
                       type="datetime-local"
                       class="form-control" />
            </div>

            <div class="weight-form__actions">
                <button type="submit" class="btn btn-primary">
                    Save
                </button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger mt-2">
                @Model.ErrorMessage
            </div>
        }

    </div>
</div>
